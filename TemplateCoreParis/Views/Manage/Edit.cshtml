@model EditUserViewModel
@{
    ViewData["Title"] = "Editar Información de Usuario";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="Edit" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Modifique la información de su cuenta</h4>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />


    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DocIdentity" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="DocIdentity" class="form-control" />
            <span asp-validation-for="DocIdentity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PhoneNumber" class="form-control" type="text" id="mask_phone" />
            <span class="help-block"> +(999) 9999-9999 </span>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Birthday" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Birthday" class="form-control" type="date" />
            <span class="help-block"> dd-MM-yyyy </span>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SecretQuestion" class="col-md-2 control-label"></label>
        <div class="col-md-10">

            <select asp-for="SecretQuestion" class="form-control">
                <option value="¿Cuál es su color favorito?">¿Cuál es su color favorito?</option>
                <option value="¿Como se llama su mascota?">¿Como se llama su mascota?</option>
                <option value="¿Quien es su personaje de ficción favorito?">¿Quien es su personaje de ficción favorito?</option>
                <option value="¿Dónde fue su primer viaje?">¿Dónde fue su primer viaje?</option>
            </select>


            <span asp-validation-for="SecretQuestion" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SecretResponse" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="SecretResponse" class="form-control" />
            <span asp-validation-for="SecretResponse" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Modificar</button>
            <a asp-action="Index" style="margin-left:2rem;">Regresar</a>
        </div>

    </div>


</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script src="~/js/metronic/jquery.inputmask.bundle.min.js"></script>

    <script>
        $(function () {
            $("#mask_phone").inputmask("mask", { mask: "(999) 9999-9999" })
        });
    </script>
}
