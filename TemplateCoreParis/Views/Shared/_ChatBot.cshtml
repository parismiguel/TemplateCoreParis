<div class="fixed-action-btn-chat" style="bottom: 2rem; right: 1rem;position:fixed">
    <a class="btn-floating btn-large blue waves-effect waves-light collapse-chat"
       data-toggle="tooltip" data-placement="left"
       title="Haga click aquí para conversar con nuestro asistente virtual...">
        <i class="fa fa-cloud"></i>
    </a>
</div>

<section id="chatbot" style="display:none;">
    <div class="box box-primary direct-chat direct-chat-primary">
        <div class="box-header with-border">
            <h3 class="box-title">VCA Chatbot</h3>

            @*<div id="resetChat" class="btn-group">
                    <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bars"></i> Menú
                    </button>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:Sidebar.toggle();">
                            <i class="fa fa-question-circle"></i> Preguntas Frecuentes
                        </a>
                    </div>
                </div>*@

      
            <div class="box-tools pull-right">
                <a href="javascript:resetChat()" class="btn btn-box-tool" data-toggle="tooltip" title="Reiniciar">
                    <i class="fa fa-repeat"></i>
                </a>

                <span id="countChats" data-toggle="tooltip" class="badge bg-light-blue" data-original-title="Mensajes nuevos">3</span>

                <button type="button" class="btn btn-box-tool collapse-chat" data-toggle="tooltip" title="Minimizar">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>


        <!-- /.box-header -->
        <div class="box-body" id="bodyChat">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages" id="scrollingChat">

            </div>
            <!--/.direct-chat-messages-->
            <!-- /.direct-chat-pane -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <form action="javascript:sendRequest()" method="post">
                <div class="input-group">
                    <input id="textInput" type="text" name="message" placeholder="Escribir mensaje ..."
                           class="form-control" />

                    <span class="input-group-btn">
                        <button type="submit"
                                class="btn btn-primary btn-flat">
                            Enviar
                        </button>
                    </span>
                </div>
            </form>
            <div id="chat_loader" style="display:none;">
                <img src="~/images/preloader.gif" alt="Pensando..." />
                <span>Pensando...</span>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
</section>

